---
import Base from "../layouts/Base.astro";
const siteUrl = Astro.url.pathname.replace(/\/$/, ''); 
---

<Base>
  
</Base>


<script define:vars={{siteUrl}}>
  const currentDate = new Date();
  const day = (currentDate.getDay() + 1).toString().padStart(2, "0");
  const month = (currentDate.getMonth() + 1).toString().padStart(2, "0");
  const dateEndpoint = `/date/${month}/${day}`;

  const forwardUrl = document.createElement('meta'); 
  forwardUrl.setAttribute('http-equiv', 'refresh');
  forwardUrl.setAttribute('content', `0; url=${siteUrl}${dateEndpoint}`);
  document.getElementsByTagName('head')[0].appendChild(forwardUrl);

</script>